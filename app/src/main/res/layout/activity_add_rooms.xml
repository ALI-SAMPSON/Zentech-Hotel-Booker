<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:background="@mipmap/room_bg"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".activities.AddRoomsActivity">

        <!-- Relative layout to place the progressBar at the center of the circular ImageView-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_add_room"
                android:layout_width="280dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/round_corner_radius"
                app:cardElevation="@dimen/spacing_small"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circularImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/tap_icon"
                        android:onClick="onSelectImage"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/materialGreen">
                    </de.hdodenhof.circleimageview.CircleImageView>


                    <!--TextInputLayout and LinearLayout and spinner View for Payment Method-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayoutGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginStart="0dp">
                        <LinearLayout
                            android:id="@+id/spinnerLayout"
                            android:layout_width="227dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <!--TextView View  and Spinner View for Voter's Gender-->
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/textViewRoomType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/room_type"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlue"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1.11"
                                android:layout_marginStart="10dp" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="1"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp">
                                <android.support.v7.widget.AppCompatSpinner
                                    android:id="@+id/spinnerRoomType"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginEnd="0dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>

                    <!-- TextInputLayout and AppCompatEdiText for Room Number -->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayoutRoomNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:textColorHint="@color/colorBlue">
                        <EditText
                            android:id="@+id/editTextRoomNumber"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:textColor="@color/materialGreen"
                            android:drawableLeft="@drawable/ic_room_type"
                            android:drawableStart="@drawable/ic_room_type"
                            android:drawablePadding="@dimen/spacing_small"
                            android:textColorHint="@color/buttonLight"
                            android:textSize="16sp"
                            android:hint="@string/room_number"
                            android:inputType="numberDecimal"
                            android:importantForAutofill="no" tools:targetApi="o"/>
                    </android.support.design.widget.TextInputLayout>

                    <!-- TextInputLayout and AppCompatEdiText for Price -->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayoutPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="40dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:textColorHint="@color/colorBlue">
                        <EditText
                            android:id="@+id/editTextPrice"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:textColor="@color/materialGreen"
                            android:drawableLeft="@drawable/ic_payment"
                            android:drawableStart="@drawable/ic_payment"
                            android:drawablePadding="@dimen/spacing_small"
                            android:textColorHint="@color/buttonLight"
                            android:textSize="16sp"
                            android:hint="@string/price"
                            android:inputType="numberDecimal"
                            android:importantForAutofill="no" tools:targetApi="o" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Add Button  -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButtonLogin"
                android:layout_marginTop="60dp"
                android:layout_width="280dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardView_add_room"
                android:text="@string/text_add"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textAlignment="center"
                android:background="@drawable/nice_design_button_green"
                android:onClick="onAddRoomButtonClick"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_below="@+id/appCompatButtonLogin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:visibility="gone"/>

            <!--<android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:rippleColor="@color/colorWhite"
                app:fabSize="normal"
                android:src="@drawable/ic_contact_us_white"
                android:onClick="openContactUs">
            </android.support.design.widget.FloatingActionButton>-->

        </RelativeLayout>

    <!--<ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:visibility="gone"/> -->

</ScrollView>