<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/payment_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:contentPadding="@dimen/card_elevation"
    card_view:cardCornerRadius="@dimen/round_corner_radius"
    card_view:cardMaxElevation="@dimens/card_elevation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/room_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/hotel_2"
            android:scaleType="centerCrop"
            android:contentDescription="@string/todo" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|bottom"
            android:visibility="gone"/>

        <!-- Text View for Username-->
        <TextView
            android:id="@+id/user_name"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="start|center"
            android:textColor="@color/colorBlue"
            android:drawableStart="@drawable/ic_check"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Text View for Room Number-->
        <TextView
            android:id="@+id/room_number"
            android:textSize="16sp"
            android:layout_gravity="start|center"
            android:textColor="@color/colorBlue"
            android:drawableStart="@drawable/ic_check"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Text View for price-->
        <TextView
            android:id="@+id/room_price"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:layout_gravity="start|center"
            android:drawableStart="@drawable/ic_check"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Text View for momo number-->
        <TextView
            android:id="@+id/mobile_number"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:layout_gravity="start|center"
            android:drawableStart="@drawable/ic_check"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>