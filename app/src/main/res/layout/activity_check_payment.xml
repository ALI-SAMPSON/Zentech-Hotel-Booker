<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver"
    tools:context=".activities.CheckPaymentActivity">

        <!-- RecyclerView to displays rooms available -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/error_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/error_loading"/>

        <TextView
            android:id="@+id/tv_error"
            android:layout_below="@+id/error_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:padding="@dimen/card_elevation"
            app:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/error_color"
            android:text="@string/text_no_payments"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!--<ListView
            android:id="@+id/payment_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView> -->

</RelativeLayout>