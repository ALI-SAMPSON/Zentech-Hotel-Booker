<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_super_dark</item>
        <item name="colorPrimaryDark">@color/edit_text_color</item>
        <item name="colorAccent">@color/colorBlue</item>
        <!-- <item name="android:textColorHint">@color/colorBlue</item> -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBarHome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_super_dark</item>
        <item name="colorPrimaryDark">@color/edit_text_color</item>
        <item name="colorAccent">@color/colorBlue</item>
        <!-- <item name="android:textColorHint">@color/colorBlue</item> -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_super_dark</item>
        <item name="colorPrimaryDark">@color/edit_text_color</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.home" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_super_dark</item>
        <item name="colorPrimaryDark">@color/edit_text_color</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Sign_up" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorViolet</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.AdminDashBoard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.AdminComponents" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.AdminComponentsNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
    </style>

    <!-- Base application theme. -->
    <style name="homeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/materialGreen</item>
        <item name="colorPrimary">@color/materialGreen</item>
        <item name="colorPrimaryDark">@color/green</item>
    </style>

    <!-- Base application theme. -->
    <style name="homeTheme.order" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/materialGreen</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/materialGreen</item>
    </style>

    <!-- Base application theme. -->
    <style name="homeTheme.profile" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/materialGreen</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/materialGreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_super_dark</item>
        <item name="colorPrimaryDark">@color/edit_text_color</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/SearchViewTheme</item>
        <item name="android:textColorPrimary">#BF000000</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="commitIcon">@drawable/ic_search</item>
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlue</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground"></item>
    </style>

</resources>
