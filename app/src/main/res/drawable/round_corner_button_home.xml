<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- sets the border parameters for the shape -->
    <stroke android:width="0dp"
        android:color="@color/light_blue"/>

    <!-- It blurs two colors to form the background color -->
    <gradient
        android:angle="90"
        android:startColor="@color/materialDarkYellow"
        android:endColor="@color/colorBlueDark"/>

    <!-- sets the corner radius of the shape -->
    <corner
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>

</shape>